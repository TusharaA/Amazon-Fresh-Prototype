<style>
.categorybutton{
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10px 2px;
    cursor: pointer;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    width:250.0px;
    height:150.0px;
}

.button2:hover {
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}
/* Add a gray background color and some padding to the footer */
footer {
	background-color: #f2f2f2;
	padding: 25px;
}

.carousel-inner img {
	width: 100%; /* Set width to 100% */
	min-height: 200px;
}

/* Hide the carousel text when the screen is less than 600 pixels wide */
@media ( max-width : 600px) {
	.carousel-caption {
		display: none;
	}
}

h3 {text-align:center;}
.button {
    background-color: #31b404; /* blue */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
}

.button:hover {background-color: #01DF01}
</style>
</head>
<body ng-controller="AdminController">
	<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
     <img src=".\images\logo.png" alt="Image">
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">   
    <ul class="nav navbar-nav">
        <li class="active"><a href="/adminProfile">Home</a></li>
        
        
      </ul>
    <ul class="nav navbar-nav navbar-right">
         <li><a href="/logout">Logout<span class="glyphicon glyphicon-log-in"></span></a></li>
      </ul>
       </div>
  </div>
</nav>
<div class="container" style="height: 450px; width: 1350px;">
<h3><font color = "#8BBA5D"><b>Search Customer</b></font></h3><br/><br/>
<form class="form-horizontal" role="form">
<div align = "center">
<div class="form-group">
             
Search Customer By:          <select name="customerSearch" ng-model="customerSearch" required >	         		  	
        			<option value="customerFirstName">Customer First Name</option>
        			<option value="customerLastName">Customer Last Name</option>
        			<option value="customerCity">Customer City</option>
        			<option value="customerState">Customer State</option>
        			</select>
        			<input type="text" name="customerSearchCriteria" ng-model="customerSearchCriteria" required><br/><br/>
        			<input class = "button" type="submit" name="searchCustomer" value = "Search Customer" ng-click="searchCustomerList();">
      </div>
    
    </div>
    </form>





			
 <div ng-hide="hideCustomerList">
<hr>
<div ng-repeat="customerDetail in customerResults">
 <b>Customer Id:</b> {{customerDetail.CUST_ID}}  <br/>
 <b>Customer First Name:</b> {{customerDetail.FIRST_NAME}}  <br/>
 <b>Customer Last Name:</b> {{customerDetail.LAST_NAME}}  <br/>
 <b>Customer Address:</b> {{customerDetail.ADDRESS}}<br/>  
 <b>Customer City: </b>{{customerDetail.CITY}}  <br/>
 <b>Customer State:</b> {{customerDetail.STATE}}  <br/>
 <b>Customer Phone: </b>{{customerDetail.PHONE}}  <br/>
 <b>Customer Email-id:</b> {{customerDetail.EMAIL_ID}}  <br/>
 <div ng-if="customerDetail.APPROVED_CUST == 1">
 <b>Customer Approved Status:</b> Approved  <br/>
 </div>
  <div ng-if="customerDetail.APPROVED_CUST == 0">
 <b>Customer Approved Status:</b> Not Approved  <br/>
 </div>
<hr></div>
 </div>
 <div ng-hide="hideNoCustomerMessage">
{{errorMessageDislay}}
 </div>

</div>
				</body>
</html>
