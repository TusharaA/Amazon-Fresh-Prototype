<body ng-controller="customerLoginController">

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
     <img src=".\images\logo.png" alt="Image">
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">    </div>
  </div>
</nav>
<br><br><br><br><br><br><br><br>

               <div class="container">

  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label class="control-label col-sm-2" for="customerId"  >Customer Id:</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="customerId" placeholder="Customer Id / Email Id" ng-model="customerId" name="customerId">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-4">          
        <input type="password" class="form-control" id="pwd" placeholder="Password" ng-model="password" name="password" >
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label><input type="checkbox"> Remember me</label>
        </div>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success" name="login" value="Log In" ng-click="customerLogin();">Sign In</button>
      </div>
    </div>
  </form>
  <div class="alert alert-danger" ng-hide="accountDoesNtExist">
	<strong><font color = "red">Account does not exist!!</strong>
</div>
<div class="alert alert-danger" ng-hide="unexpected_error">
	<strong>Unexpected error, try again</strong>
</div>
</div>
