<html ng-app="amazon">
<head>
<title>Admin</title>
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
<script src="https://code.angularjs.org/1.3.15/angular.js"></script>
<script src="/scripts/ng-map.min.js"></script> 
<style>
.categorybutton{
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10px 2px;
    cursor: pointer;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    width:250.0px;
    height:150.0px;
}

.button2:hover {
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}
/* Add a gray background color and some padding to the footer */
footer {
	background-color: #f2f2f2;
	padding: 25px;
}

.carousel-inner img {
	width: 100%; /* Set width to 100% */
	min-height: 200px;
}

/* Hide the carousel text when the screen is less than 600 pixels wide */
@media ( max-width : 600px) {
	.carousel-caption {
		display: none;
	}
}

h3 {text-align:center;}
.button {
    background-color: #31b404; /* blue */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
}

.button:hover {background-color: #01DF01}
</style> 
<script src="/angularjs/amazonStart.js"></script>
<script src="/angularjs/adminController.js"></script>
</head>
<body ng-controller="AdminController">
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
     <img src=".\images\logo.png" alt="Image">
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">   
    <ul class="nav navbar-nav">
        <li class="active"><a href="/adminProfile">Home</a></li>
        
        
      </ul>
    <ul class="nav navbar-nav navbar-right">
         <li><a href="/logout">Log Out</a></li>
      </ul>
       </div>
  </div>
</nav>
<h3><font color = "#8BBA5D"><b>Search Product</b></font></h3><br/><br/>
<form class="form-horizontal" role="form">
<div align = "center">
<div class="form-group">
Search Product By:  <select name="productSearch" ng-model="productSearch" required >	         		  	
        			<option value="productName" selected>Product Name</option>
        			<option value="productCategory">Category</option>
        			<option value="farmerName" selected>Farmer Name</option>
        			<option value="farmerId">Farmer Id</option>
        			<option value="productAvgRatings" selected>Product Ratings</option>
        			</select>
        			<input type="text" name="productSearchCriteria" ng-model="productSearchCriteria" required><br/><br/>
        			<input class = "button" type="submit" name="searchProduct" value = "Search Product" ng-click="searchProductList();">
	      </div>
    
    </div>
    </form>
		
 <div ng-hide="hideProductList">
<hr>
<div ng-repeat="productDetail in productResults">
 <b>Product Id:</b> {{productDetail.PRODUCT_ID}}  <br/>
 <b>Farmer Id:</b> {{productDetail.FARMER_ID}}  <br/>
 <b>Product Name:</b> {{productDetail.PRODUCT_NAME}}  <br/>
 <b>Farmer's Name:</b> {{productDetail.FIRST_NAME}}  <br/>
 <b>Product Description:</b> {{productDetail.PRODUCT_DESCRIPTION}}<br/>  
 <b>Product Price: </b>{{productDetail.PRODUCT_PRICE}}  <br/>
 <b>Product Quantity(Lb) Available:</b> {{productDetail.PRODUCT_QTY}}  <br/>
 <b>Product Ratings:</b> {{productDetail.PRODUCT_AVG_RATINGS}}<br/>  
 <div ng-if="productDetail.APPROVED_PRODUCT == 1">
 <b>Product Approved Status:</b> Approved  <br/>
 </div>
  <div ng-if="productDetail.APPROVED_PRODUCT == 0">
 <b>Product Approved Status:</b> Not Approved  <br/>
 </div>
<hr></div>
 </div>
 <div ng-hide="hideNoProductMessage">
{{errorMessageDislay}}
 </div>
 </div>
</body>
</html>